/* component/tabbar/tabbar.wxss */
.tabbar {
    position: fixed;
    left: 0;
    bottom: 0;
    color: #fff;
    width: 100vw;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20rpx;
    flex-direction: column;
}
.tabbar_detail {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100vw;
}
.router_icon_div {
    width: 50vw;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    padding-bottom: 10rpx;
    background: #000;

}
.color_pink {
    background: #FF41B5; 
    width: 100%;
    height: 4rpx;
    margin-bottom: 10rpx;
}
.color_blue{
    background: #00FCFC; 
     width: 100%;
    height: 4rpx;
    margin-bottom: 10rpx;
}
.router_icon {
    display: flex;
    align-items: center;
    text-align: center;
    flex-direction: column;
}
.tabbar image {
    height: 40rpx;
    width: 45rpx;
}
.diy_icon {
    position: absolute;
    bottom: 45rpx;
    width: 98rpx !important;
    height: 94rpx !important;
}